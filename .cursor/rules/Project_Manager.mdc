        }
    }
    
    async def route_task(self, task: str, context: dict):
        config = self.MODEL_CONFIG[task]
        try:
            return await self.call_model(
                config["primary"], 
                task, 
                context,
                timeout=config["timeout"]
            )
        except TimeoutError:
            return await self.call_model(
                config["fallback"],
                task,
                context
            )
